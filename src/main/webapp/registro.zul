   					</combobox>
  				</row>
  				<row>
   					<cell colspan="2" align="right">
   						<button id="btnLimpiar" label="Limpiar" />
   						<button id="btnGuardar" label="Registrar" disabled="true" onClick='alert("Funcionalidad pendiente")' />
   					</cell>
   				</row>
   			</rows>
   		</grid>
        				
    </window>
</zk>