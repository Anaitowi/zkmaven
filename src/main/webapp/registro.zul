   				<row>
   					<label value="Repetir Correo" />
  					<textbox id="txRCorreo" maxlength="255" width="300px" onChange="win$composer.validaGuardar();" />
  				</row>
   				<row>
  					<label value = "Contrase単a" />
  					<intbox id="intContrase単a" maxlength="10" width="200px" onChange="win$composer.validaGuardar();"></intbox>
  				</row>
  				<row>
  					<label value= "Repetir Contrase単a" />
  					<intbox id="intRContrase単a" maxlength="10" width="200px" onChange="win$composer.validaGuardar();"></intbox>
  				</row>
  				<row>
  					<label value="Uso" />
   					<combobox id="cboUso" onChange="win$composer.validaGuardar()">
  						<comboitem label="Personal" value="1" />
   						<comboitem label="Familiar" value="2" />
   					</combobox>
  				</row>
  				<row>
